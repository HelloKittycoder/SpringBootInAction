<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kittycoder.book.mapper.BookMapper">

    <select id="selectBookList" resultType="com.kittycoder.book.po.Book">
        select * from t_book
    </select>

    <insert id="insertBook">
        insert into t_book(l_id, vc_book_name, vc_author)
        values (#{id}, #{bookName}, #{author})
    </insert>

    <insert id="updateBook">
        update t_book
        <set>
            <if test="bookName != null">
                vc_book_name = #{bookName},
            </if>
            <if test="author != null">
                vc_author = #{author},
            </if>
        </set>
        where l_id = #{id}
    </insert>
</mapper>
